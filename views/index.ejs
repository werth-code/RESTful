<%- include("partials/header") %>

<h1 style="padding-top: 2%;"> 
    Index Page
</h1>

    <% blogs.forEach( blog => { %>
        <div>
            <h2><%=blog.title%></h2>
            <img src="<%= blog.image %>">
            <p><%= blog.created %></p>
            <p><%= blog.body.substring(0, 200) + '...' %></p>
            <a href="/blogs/<%= blog._id %>">Read More</a>
        </div>
    <% }) %>

  
<%- include("partials/footer") %>
